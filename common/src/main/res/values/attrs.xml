<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTitleBar">
        <attr name="titleBarTitle" format="string" />
        <attr name="titleBarTitleColor" format="reference|color" />
        <attr name="titleBarLeftTitle" format="string" />
        <attr name="titleBarRightTitle" format="string" />
        <attr name="titleBarLeftImage" format="reference" />
        <attr name="titleBarRightImage" format="reference" />
        <attr name="titleBarRightImage2" format="reference" />
        <attr name="titleBarBackground" format="reference|color" />
        <attr name="titleBarLeftIsClick" format="boolean" />
        <attr name="titleBarLineIsShow" format="boolean" />
        <attr name="titleBarRightTitleColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="PullRefreshLayout">
        <attr name="tr_max_head_height" format="dimension" />
        <attr name="tr_head_height" format="dimension" />
        <attr name="tr_max_bottom_height" format="dimension" />
        <attr name="tr_bottom_height" format="dimension" />
        <attr name="tr_overscroll_height" format="dimension" />
        <attr name="tr_enable_loadmore" format="boolean" />
        <attr name="tr_pureScrollMode_on" format="boolean" />
        <attr name="tr_overscroll_top_show" format="boolean" />
        <attr name="tr_overscroll_bottom_show" format="boolean" />
        <attr name="tr_enable_overscroll" format="boolean" />
        <attr name="tr_headerView" format="dimension" />
        <attr name="tr_bottomView" format="dimension" />
        <attr name="tr_enable_autoLoadMore" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="LoadingStyle" format="reference" />
        <attr name="loading_view_size" format="dimension" />
        <attr name="loading_view_color" format="color" />
    </declare-styleable>

</resources>