<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/app_view_size_30"
        android:textColor="#222222"
        android:textSize="@dimen/app_view_size_48"
        tools:text="惊！大选挑战者泼水骂街，普京大手笔回击" />

    <LinearLayout
        android:id="@+id/ll_media_user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_view_size_144"
        android:layout_marginBottom="@dimen/app_view_size_16"
        android:layout_marginRight="@dimen/app_view_size_32"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="@dimen/app_view_size_72"
            android:layout_height="@dimen/app_view_size_72"
            android:layout_marginLeft="@dimen/app_view_size_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_22"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="@dimen/app_view_size_30"
                android:textStyle="bold"
                tools:text="央视新闻" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_view_size_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/app_view_size_26"
                    tools:text="17小时前" />

                <TextView
                    android:id="@+id/tv_news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_view_size_8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/app_view_size_26"
                    tools:text="· 中央电视台新闻中心官方账号" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <WebView
        android:id="@+id/wv_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </WebView>

</LinearLayout>