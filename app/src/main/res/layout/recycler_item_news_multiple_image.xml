<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_view_size_44"
        android:layout_marginRight="@dimen/app_view_size_44"
        android:layout_marginTop="@dimen/app_view_size_54"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#222222"
        android:textSize="@dimen/app_view_size_46"
        tools:text="韩国购物街明洞曾挤满中国游客去年底“萨德”风波缓和后，明洞仍不见大批中国游客去年底，" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_news_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_view_size_44"
        android:layout_marginRight="@dimen/app_view_size_44"
        android:layout_marginTop="@dimen/app_view_size_26">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_view_size_44"
        android:layout_marginTop="@dimen/app_view_size_26"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_32"
            tools:text="海外网" />

        <TextView
            android:id="@+id/tv_news_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_20"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_32"
            tools:text="1.3万评论" />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_20"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_32"
            tools:text="1小时前" />

    </LinearLayout>

    <com.logex.widget.DividerLine
        style="@style/divider_line_normal"
        android:layout_marginLeft="@dimen/app_view_size_44"
        android:layout_marginRight="@dimen/app_view_size_44"
        android:layout_marginTop="@dimen/app_view_size_54" />

</LinearLayout>