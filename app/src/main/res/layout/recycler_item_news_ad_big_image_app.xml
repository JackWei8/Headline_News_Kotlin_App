<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginRight="@dimen/app_view_size_30"
        android:layout_marginTop="@dimen/app_view_size_26"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#222222"
        android:textSize="@dimen/app_view_size_32"
        tools:text="悄悄下载，适合一个人看的小视频~" />

    <ImageView
        android:id="@+id/iv_news_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_view_size_386"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginRight="@dimen/app_view_size_30"
        android:layout_marginTop="@dimen/app_view_size_20"
        android:scaleType="centerCrop"
        android:src="@drawable/list_item_place_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_view_size_88"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginRight="@dimen/app_view_size_30"
        android:background="@color/line_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_16"
            android:layout_marginRight="@dimen/app_view_size_20"
            android:layout_weight="1.0"
            android:textColor="@color/dark"
            android:textSize="@dimen/app_view_size_30"
            tools:text="你想看的小视频在这" />

        <TextView
            android:layout_width="@dimen/app_view_size_144"
            android:layout_height="@dimen/app_view_size_56"
            android:layout_marginRight="@dimen/app_view_size_16"
            android:background="@drawable/bg_news_list_ad_label"
            android:gravity="center"
            android:text="立即下载"
            android:textColor="#3797d9"
            android:textSize="@dimen/app_view_size_28" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginTop="@dimen/app_view_size_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_view_size_30"
            android:background="@drawable/bg_news_list_ad_label"
            android:gravity="center"
            android:paddingLeft="@dimen/app_view_size_6"
            android:paddingRight="@dimen/app_view_size_6"
            android:text="广告"
            android:textColor="#3797d9"
            android:textSize="@dimen/app_view_size_20" />

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_12"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_24"
            tools:text="快视频" />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_12"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_24"
            tools:text="3小时前" />

    </LinearLayout>

    <com.logex.widget.DividerLine
        style="@style/divider_line_normal"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginRight="@dimen/app_view_size_30"
        android:layout_marginTop="@dimen/app_view_size_26" />

</LinearLayout>