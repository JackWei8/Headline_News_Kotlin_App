<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_30"
            android:layout_marginTop="@dimen/app_view_size_26"
            android:layout_weight="1.0"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:textColor="#222222"
            android:textSize="@dimen/app_view_size_32"
            tools:text="贾玲模仿周晓鸥这段真是看一次笑一次，贾玲的表情太有戏了！" />

        <FrameLayout
            android:layout_width="@dimen/app_view_size_224"
            android:layout_height="@dimen/app_view_size_146"
            android:layout_marginLeft="@dimen/app_view_size_16"
            android:layout_marginRight="@dimen/app_view_size_30"
            android:layout_marginTop="@dimen/app_view_size_24">

            <ImageView
                android:id="@+id/iv_news_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_new_list_image" />

            <TextView
                android:id="@+id/tv_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/app_view_size_42"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/app_view_size_8"
                android:layout_marginRight="@dimen/app_view_size_8"
                android:background="@drawable/bg_video_list_duration"
                android:gravity="center"
                android:paddingLeft="@dimen/app_view_size_12"
                android:paddingRight="@dimen/app_view_size_12"
                android:textColor="@color/white"
                android:textSize="@dimen/app_view_size_24"
                tools:text="04:33" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginTop="@dimen/app_view_size_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_24"
            tools:text="影视星艺" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_12"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/app_view_size_24"
            tools:text="32评论" />

    </LinearLayout>

    <com.logex.widget.DividerLine
        style="@style/divider_line_normal"
        android:layout_marginLeft="@dimen/app_view_size_30"
        android:layout_marginRight="@dimen/app_view_size_30"
        android:layout_marginTop="@dimen/app_view_size_26" />

</LinearLayout>