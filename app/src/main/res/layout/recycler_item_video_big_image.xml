<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_view_size_606">

        <ImageView
            android:id="@+id/iv_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_44"
            android:layout_marginRight="@dimen/app_view_size_44"
            android:layout_marginTop="@dimen/app_view_size_44"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/app_view_size_42"
                tools:text="龙梅子 这首情歌 男人听了沉默 女人听了流泪" />

            <TextView
                android:id="@+id/tv_video_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_view_size_12"
                android:textColor="#cacaca"
                android:textSize="@dimen/app_view_size_32"
                tools:text="161万次播放" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_view_size_170"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="@dimen/app_view_size_98"
            android:layout_height="@dimen/app_view_size_98"
            android:layout_marginLeft="@dimen/app_view_size_44" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_36"
            android:layout_marginRight="@dimen/app_view_size_42"
            android:layout_weight="1.0"
            android:textColor="#222222"
            android:textSize="@dimen/app_view_size_40"
            tools:text="情感音乐库" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/btn_add_video_selector"
            android:drawablePadding="@dimen/app_view_size_24"
            android:gravity="center_vertical"
            android:text="关注"
            android:textColor="#222222"
            android:textSize="@dimen/app_view_size_40" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_56"
            android:drawableLeft="@drawable/btn_video_comment_count_selector"
            android:drawablePadding="@dimen/app_view_size_24"
            android:gravity="center_vertical"
            android:textColor="#222222"
            android:textSize="@dimen/app_view_size_40"
            tools:text="110" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_view_size_52"
            android:layout_marginRight="@dimen/app_view_size_44"
            android:src="@drawable/btn_new_more_selector" />

    </LinearLayout>

    <com.logex.widget.DividerLine
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_view_size_18"
        android:background="@color/common_bg_dark" />

</LinearLayout>