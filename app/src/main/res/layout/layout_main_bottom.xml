<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <com.logex.widget.DividerLine style="@style/divider_line_normal" />

    <LinearLayout
        android:id="@+id/ll_main_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/app_view_size_8">

        <com.logex.headlinenews.widget.MainTabView
            android:id="@+id/btn_container_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            app:tabImage="@drawable/tab_index_bg"
            app:tabTitle="@string/index"
            app:tabTitleColor="@color/main_bottom_text_color">

        </com.logex.headlinenews.widget.MainTabView>

        <com.logex.headlinenews.widget.MainTabView
            android:id="@+id/btn_container_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            app:tabImage="@drawable/tab_video_bg"
            app:tabTitle="@string/video"
            app:tabTitleColor="@color/main_bottom_text_color">

        </com.logex.headlinenews.widget.MainTabView>

        <com.logex.headlinenews.widget.MainTabView
            android:id="@+id/btn_container_micro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            app:tabImage="@drawable/tab_micro_bg"
            app:tabTitle="@string/micro"
            app:tabTitleColor="@color/main_bottom_text_color">

        </com.logex.headlinenews.widget.MainTabView>

        <com.logex.headlinenews.widget.MainTabView
            android:id="@+id/btn_container_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            app:tabImage="@drawable/tab_nologin_bg"
            app:tabTitle="未登录"
            app:tabTitleColor="@color/main_bottom_text_color">

        </com.logex.headlinenews.widget.MainTabView>

    </LinearLayout>

</LinearLayout>